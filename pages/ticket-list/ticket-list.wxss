.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #15B8A6;
  padding: 80rpx 30rpx 30rpx;
  color: #fff;
  display: flex;
  align-items: center;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.route-info {
  flex: 1;
  margin-left: 20rpx;
}

.route-text {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.content {
  padding: 0 30rpx;
}

.filter-bar {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}

.filter-item.active {
  color: #15B8A6;
  font-weight: bold;
  position: relative;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #15B8A6;
  border-radius: 3rpx;
}

.ticket-list {
  margin-top: 20rpx;
}

.ticket-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.ticket-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
}

.time {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.duration {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.ticket-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.type {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.seats {
  font-size: 24rpx;
  color: #999;
}

.ticket-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
  margin-bottom: 10rpx;
}

.select-btn {
  background-color: #15B8A6;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.loading {
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.no-data-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-data-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.no-data-tip {
  font-size: 28rpx;
  color: #999;
}